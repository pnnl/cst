              "unit": "V",
              "tags": {"logger": "yes" }
            }
          ],
          "endpoints": [
            {
              "global": true,
              "key": "EVehicle/EV1_voltage",
              "destination": "Battery/EV1_current",
              "type": "double",
              "unit": "V",
              "tags": {"logger": "yes" }
            }
          ],
          "subscriptions": [
            {
              "global": true,
